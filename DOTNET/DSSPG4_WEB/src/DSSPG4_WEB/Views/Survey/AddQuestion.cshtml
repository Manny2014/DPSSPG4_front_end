@model NewQuestionViewModel

@{
    ViewData["Title"] = "Add";
}

<h2>New question for: @Model.Survey.SurveyName</h2>

<form asp-action="AddQuestion" asp-all-route-id="@Model.Survey.Id">
    <div class="form-horizontal">
        <h4>New Question</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group">
            <label asp-for="Question" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"  />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Questions" asp-route-id="@Model.Survey.Id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
