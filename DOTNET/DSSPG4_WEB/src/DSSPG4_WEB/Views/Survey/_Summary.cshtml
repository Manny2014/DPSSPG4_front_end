@model Survey

<section class="panel panel-default">
    <div class="panel-heading">@Model.SurveyName</div>
    <div class="panel-body">

        <div>
            <a class="btn btn-default btn-xs" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a class="btn btn-default btn-xs" asp-action="Delete" asp-route-id="@Model.Id">Delete</a> | 
            <a class="btn btn-default btn-xs" asp-action="Questions" asp-route-id="@Model.Id">Questions</a> |
            <a class="btn btn-default btn-xs" asp-action="SurveyResults" asp-route-id="@Model.Id">Results</a>
        </div>
    </div>
</section>
