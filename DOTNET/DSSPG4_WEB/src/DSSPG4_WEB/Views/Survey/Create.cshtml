@using DSSPG4_WEB.Models.SurvetViewModels
@model SurveyCreateViewModel

<form method="post" asp-controller="Survey" asp-action="Create">
    <div class="modal-header" style="padding:35px 50px;"><h1>Create Survey</h1></div>
    <div asp-validation-summary="All"></div>
    <div class="modal-body" style="padding:40px 50px;">
        <div class="form-group">
            <label asp-for="SurveyName"></label>
            <input class="form-control" asp-for="SurveyName" />
            @Html.ValidationMessageFor(model => model.SurveyName)
        </div>

        <div class="form-group">
            <label asp-for="NumberQuestions"></label>
            <input class="form-control" asp-for="NumberQuestions" />
            @Html.ValidationMessageFor(model => model.NumberQuestions)
        </div>

        <div>
            <input type="submit" class="btn btn-default btn-success btn-block" value="Create" />
        </div>
    </div>
</form>
