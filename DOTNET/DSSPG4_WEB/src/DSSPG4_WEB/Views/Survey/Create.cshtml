@using DSSPG4_WEB.Models.SurvetViewModels
@model SurveyCreateViewModel

<form method="post" asp-controller="Survey" asp-action="Create" class="form-horizontal">
    <h4>Create Survey</h4>
	<p id="subtext"><b>NOTE TO RESEARCHERS:</b><br> 
	Please let users know how many questions they are allowed to put in each box.</p>
    <hr/>
    
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="SurveyName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="SurveyName" class="form-control" />
            <span asp-validation-for="SurveyName" class="text-danger"></span>
        </div>
    </div>
      
    <div class="form-group">
        <label asp-for="SampleSize" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="SampleSize" />
            <span asp-validation-for="SampleSize" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Status" asp-items="@Html.GetEnumSelectList<SurveyStatus>()" class="form-control"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NumberQuestions" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="NumberQuestions" />
            @Html.ValidationMessageFor(model => model.NumberQuestions)
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default btn-success">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}